<style>

section.homepage-image-banner {
  position: relative;
  display: block;
  width: 100%;
  height: 280px;
  margin: 0 auto;
  --n: 4; /** numbeer of images */
  --a: 3; /** display time */
  --b: 2; /** fade **/
  --duration: calc((var(--a) + var(--b)) * var(--n));
  --delay: calc(var(--a) + var(--b));
}
  #pic-1 {
    animation-delay: 0s;
    background-image:url('{{ section.settings.image | img_url: 'master' }}');
  }
  #pic-2 {
    background-image:url('{{ section.settings.image_2 | img_url: 'master' }}');
    animation-delay: 5s;
  }
  #pic-3 {
    background-image:url('{{ section.settings.image_3 | img_url: 'master' }}');
    animation-delay: 10s;
  }

  #pic-4 {
    background-image:url('{{ section.settings.image_4 | img_url: 'master' }}');
    animation-delay:  15s;
  }

  
  .banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
    animation: fade 20s infinite;
  }
  
  .strapline {
    position: absolute;
    background: hsla(0, 100%, 100%, 0.8);
    padding: 0.5rem 1rem;
    left: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
    bottom: 1rem;
  }
@keyframes fade {
  0% {
    opacity: 1;
  }
  15% {
    opacity: 1;
  }
  25% {
    opacity: 0;
  }
  90% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
@media (min-width: 768px) {
  section.homepage-image-banner {
    height: 480px;
  }

  
  #pic-2 {
    background-position: center;
  }

  #pic-3  {
    background-position: 0% 22%;
  }

  #pic-4{
    background-position: 0% 12%;
  }
}

</style>


    <section class="homepage-image-banner">
